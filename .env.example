# Telegram API credentials
API_ID=your_api_id
API_HASH=your_api_hash

# Channel configuration
SOURCE_CHANNEL=@source_channel_username_or_id
DESTINATION_CHANNEL=@destination_channel_username_or_id

# Optional session string (if you already have one)
SESSION_STRING=

# Optional text filters (comma-separated)
TEXT_FILTERS=register,promo,join now

# Web interface configuration
PORT=10000
SESSION_SECRET=change_this_to_a_random_string

# Database configuration (optional)
DB_FILE=forwarded_messages.db